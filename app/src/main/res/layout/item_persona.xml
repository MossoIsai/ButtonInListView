<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePersona"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/nombrePersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:text="ISAI GARCIA MOSO"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imagePersona"
            android:layout_toEndOf="@+id/imagePersona"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nombrePersona"
            android:layout_alignStart="@+id/nombrePersona"
            android:layout_below="@+id/nombrePersona"
            android:layout_marginTop="11dp"
            android:text="REPORTAR" />
    </RelativeLayout>
</LinearLayout>